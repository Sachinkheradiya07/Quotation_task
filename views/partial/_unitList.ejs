  function deleteUnit(id) {
    if (confirm("Are you sure you want to delete this unit?")) {
      fetch("/unit/delete/" + id, { method: "DELETE" })
        .then((response) => response.json())
        .then((data) => {
          if (data.success) {
            // alert('Unit deleted successfully');
            location.reload();
          } else {
            alert("Error deleting unit");
          }
        });
    }
  }
