<div class="unit-list">
  <h2>Units List</h2>
  <table>
    <thead>
      <tr>
        <th>Order Unit</th>
        <th>Packing Unit</th>
        <th>Weight</th>
        <th>Note</th>
        <th>Created At</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% units.forEach(unit => { %>
      <tr>
        <td><%= unit.orderUnit %></td>
        <td><%= unit.packingUnit %></td>
        <td><%= unit.weight %></td>
        <td><%= unit.noteForMe || 'N/A' %></td>
        <td><%= new Date(unit.createdAt).toLocaleString() %></td>
        <td>
          <div class="action-buttons">
            <button
              onclick="editUnit('<%= unit.id %>', '<%= unit.orderUnit %>', '<%= unit.packingUnit %>', '<%= unit.weight %>', `<%= unit.noteForMe || '' %>`)"
            >
              ‚úèÔ∏è Edit
            </button>
            <button class="delete-btn" onclick="deleteUnit('<%= unit.id %>')">
              üóëÔ∏è Delete
            </button>
          </div>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

