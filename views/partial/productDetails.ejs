<div id="productDetailsSection" class="card">
  <div class="card-header">
    <h1 class="card-title h4 mb-0">Product Details</h1>
  </div>
  <div class="card-body">
    <div class="product-wrapper">
      <div class="product-details">
        <div class="row g-3">
          <div class="col-md-6 details div1">
            <div class="mb-3">
              <label for="productName" class="form-label">Product Name</label>
              <input
                type="text"
                id="productName"
                name="productName"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <label for="hsnSac" class="form-label">HSN/SAC</label>
              <input
                type="text"
                id="hsnSac"
                name="hsnSac"
                class="form-control"
                required
              />
            </div>
          </div>

          <div class="col-md-6 details div2">
            <div class="mb-3">
              <label for="gst" class="form-label">GST</label>
              <input type="number" id="gst" name="gst" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="productImage" class="form-label">Product Image</label>
              <input
                type="file"
                id="productImage"
                name="productImage"
                class="form-control"
              />
            </div>
          </div>

          <div class="col-12 details div3">
            <div class="mb-3">
              <label for="productDescription" class="form-label"
                >Product Description</label
              >
              <textarea
                id="productDescription"
                name="productDescription"
                class="form-control"
                rows="3"
              ></textarea>
            </div>
            <div class="mb-3">
              <label for="inventory" class="form-label">Inventory</label>
              <select name="inventory" id="inventory" class="form-select">
                <option value="Finished Goods">Finished Goods</option>
                <option value="Rejection">Rejection</option>
                <option value="Raw Material">Raw Material</option>
              </select>
            </div>
          </div>
        </div>

        <div class="variants-section mt-4">
          <h3 class="h5 mb-3">Product Variants</h3>
          <div id="variantsContainer" class="mb-3">
            <!-- Variants will be added here -->
          </div>
          <button type="button" id="addVariant" class="btn btn-outline-primary">
            + Add Variant
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  let variantCount = 0;

  document.getElementById("addVariant").addEventListener("click", function () {
    variantCount++;

    const variantDiv = document.createElement("div");
    variantDiv.classList.add(
      "variant",
      "row",
      "g-3",
      "mb-3",
      "align-items-end"
    );
    variantDiv.innerHTML = `
            <div class="col-md-5">
                <label class="form-label">Variant Name</label>
                <input type="text" name="variants[${variantCount}][name]" class="form-control" required>
            </div>
            <div class="col-md-5">
                <label class="form-label">Variant Image</label>
                <input type="file" name="variants[${variantCount}][image]" class="form-control">
            </div>
            <div class="col-md-2">
                <button type="button" class="btn btn-danger removeVariant w-100">Remove</button>
            </div>
        `;

    document.getElementById("variantsContainer").appendChild(variantDiv);

    variantDiv
      .querySelector(".removeVariant")
      .addEventListener("click", function () {
        variantDiv.remove();
      });
  });
</script>
