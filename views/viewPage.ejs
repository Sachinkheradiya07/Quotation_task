<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/CSS/viewPage.css" />
  </head>
  <body>
    <div class="container mt-4">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th scope="col">Name</th>
              <th scope="col">HSN</th>
              <th scope="col">GST</th>
              <th scope="col">Status</th>
              <th scope="col">Description</th>
              <th scope="col">Variant</th>
              <th scope="col">Created At</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(product => { %>
            <tr>
              <td><%= product.productName %></td>

              <td><%= product.hsnSac || 'N/A' %></td>
              <td><%= product.gst || '0' %></td>
              <td>
                <span class="badge bg-success status active">Active</span>
              </td>
              <td><%= product.productDescription || 'N/A' %></td>
              <td>
                <% if (product.variants && product.variants.length > 0) { %> <%=
                product.variants.map(variant => variant.name).join(', ') %> <% }
                else { %> No Variants <% } %>
              </td>
              <td><%= product.createdAt || 'N/A' %></td>
              <td class="last-button">
                <div class="d-flex gap-2">
                  <a
                    href="/edit/<%= product.id %>"
                    class="btn btn-sm btn-primary edit-icon"
                    >Edit</a
                  >
                  <form
                    action="/delete/<%=product.id %>"
                    method="post"
                    class="d-inline"
                  >
                    <button type="submit" class="btn btn-sm btn-danger">
                      Delete
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Bootstrap JS Bundle CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
